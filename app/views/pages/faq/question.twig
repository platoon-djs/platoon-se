{% extends '@layouts/default.twig' %}

{% block page_content %}
  <div class="page-faq page-container container">
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <div class="panel panel-default">
          <div class="panel-heading">
            {{ data.q }}
          </div>
          <div class="panel-body">
            <p>
              {{ data.a|raw|nl2br }}
            </p>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4 col-md-offset-2">
        {% if prev %}
          <a href="/faq/{{section.slug}}/{{prev.slug}}"><i class="fa fa-arrow-left fa-fw"></i>{{ prev.q }}</a>
        {% endif %}
      </div>
      <div class="col-md-4 text-right">
        {% if next %}
          <a href="/faq/{{section.slug}}/{{next.slug}}">{{ next.q }}<i class="fa fa-arrow-right fa-fw"></i></a>
          <br>
          <br>
        {% endif %}
      </div>
    </div>
  </div>
{% endblock %}
